!!! 5
%html
  %head
    %title RottenPotatoes!
    = stylesheet_link_tag 'application'
    /= javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    %nav.navbar.navbar-light.bglight
      .container-fluid
        %a.navbar-brand{:href => "/"} Rotten Potatoes
        %ul.navbar-nav
          -if session[:user_id] == nil
            -# %li.nav-item
            -#   = link_to 'Sign up with Facebook', '/auth/facebook/callback', :class => "nav-link"
            %li.nav-item
              = link_to 'Sign in with Facebook', signin_path, :class => "nav-link"
          -else
            %li.nav-item
            = link_to 'Sign out', signout_path, :class => "nav-link"
    .wrapper
      = yield
