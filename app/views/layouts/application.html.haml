!!! 5
%html
  %head
    %title RottenPotatoes!
    = stylesheet_link_tag 'application'
    /= javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    %nav.navbar.navbar-light.bglight
      .container-fluid
        %a.navbar-brand{:href => "/"} Rotten Potatoes
        %ul.navbar-nav
          -if true
            %li.nav-item
            = link_to 'Log in', new_movie_path, :class => "nav-link"
            %li.nav-item
              = link_to 'Sign up', new_movie_path, :class => "nav-link"
          -else
            %li.nav-item
            = link_to 'Log out', new_movie_path, :class => "nav-link"
    .wrapper
      = yield
