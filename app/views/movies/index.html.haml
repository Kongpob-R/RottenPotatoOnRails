#container
  %h1 All Movies

  %table#movies.table
    %thead
      %tr
        %th 
        %th Movie Title
        %th Rating
        %th Release Date
        %th More Info
    %tbody
      - @movies.each_with_index do |movie, index|
        %tr
          %td= index + 1
          %td= movie.title
          %td= movie.rating
          %td= movie.release_date
          %td= link_to "More aboout #{movie.title}", movie_path(movie), :class => 'btn btn-info'

  = link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary'
