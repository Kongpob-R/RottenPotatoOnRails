#container
  %h2 Details about #{@movie.title}
  %ul#details
    %li
      Rating:
      = @movie.rating
    %li
      Released on:
      = @movie.release_date.strftime("%B %d, %Y")

  %h3 Description:

  %p#description= @movie.description
  %div.row
    %div.col-md-1
      = link_to 'Edit', edit_movie_path(@movie), :class => 'btn btn-warning'
    %div.col-md-1
      = button_to 'Delete', movie_path(@movie), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-danger'
    %div.col-md-2
      = link_to 'Back to movie list', movies_path, :class => 'btn btn-secondary'
